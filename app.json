{
  "name": "Drop Project - Continuous Auto-Grader",
  "description": "A web application where students drop their projects to check for correctness and quality.",
  "repository": "https://github.com/drop-project-edu/drop-project",
  "keywords": ["auto-grader", "maven", "java", "kotlin", "education"],

  "buildpacks": [
    {
      "url": "https://github.com/palves-ulht/heroku-buildpack-java-maven"
    }
  ],

  "env": {
    "DP_M2_HOME": {
      "description": "Maven home",
      "value": ".maven"
    },
    "DP_MVN_REPO": {
      "description": "Maven repository",
      "value": ".mvn_repository"
    }
  }
}